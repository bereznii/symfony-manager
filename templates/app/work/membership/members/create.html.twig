{% extends 'layout/base.html.twig' %}

{% block title %}Members{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work.members') }}">Members</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.firstName, {'attr': {'placeholder': 'First Name', 'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.lastName, {'attr': {'placeholder': 'Last Name', 'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email, {'attr': {'placeholder': 'Email', 'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.group, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}