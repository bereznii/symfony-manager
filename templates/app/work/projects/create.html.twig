{% extends 'layout/base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work.projects') }}">Projects</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.name, {'attr': {'placeholder': 'Name', 'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.sort, {'attr': {'placeholder': 'Sort', 'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}